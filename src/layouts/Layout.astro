---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "TinyGoat helps B2B businesses build sales systems that scale. Strategy, process design, and partnerships for sustainable growth." } = Astro.props;

// Generate canonical URL from current page path
const canonicalURL = new URL(Astro.url.pathname, 'https://tinygoat.ai').href;
const fullTitle = `${title} | TinyGoat`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://tinygoat.ai/tinygoat-logo.png" />
    <meta property="og:site_name" content="TinyGoat" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://tinygoat.ai/tinygoat-logo.png" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="180x180" href="/favicon.png?v=2" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=2" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png?v=2" />
    <link rel="shortcut icon" href="/favicon.ico?v=2" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>

    <!-- Organization Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "TinyGoat",
      "url": "https://tinygoat.ai",
      "logo": "https://tinygoat.ai/tinygoat-logo.png",
      "description": "Sales operations and growth strategy consulting for B2B businesses.",
      "email": "info@tinygoat.ai",
      "sameAs": [
        "https://www.linkedin.com/in/gabrielleschiavenato"
      ],
      "founder": {
        "@type": "Person",
        "name": "Gabrielle Schiavenato"
      },
      "serviceType": ["Sales Operations", "Growth Strategy", "Sales Training", "Strategic Partnerships"]
    })} />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KLXRVR1DNZ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-KLXRVR1DNZ');
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100vh;
  }
</style>
